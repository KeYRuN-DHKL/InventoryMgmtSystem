@model InventoryMgmtSystem.Dto.StakeHolderDto

@{
    ViewBag.Title = "Create StakeHolder";
}

<h2>Create StakeHolder</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="Contact" class="form-label"></label>
        <input asp-for="Contact" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="VatP" class="form-label">PAN</label>
        <input asp-for="VatP" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <select asp-for="Type" class="form-control">
            <option value="">-- Select Type --</option>
            <option value="Customer">Customer</option>
            <option value="Vendor">Vendor</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>