@model List<InventoryMgmtSystem.Models.StakeHolderVm>

@{
    ViewBag.Title = "StakeHolder List";
}

<h2>StakeHolders</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New</a>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Contact</th>
        <th>Email</th>
        <th>VAT/PAN</th>
        <th>Type</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.Contact</td>
            <td>@item.Email</td>
            <td>@item.Vat</td>
            <td>@item.Type</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger"
                   onclick="return confirm('Are you sure to delete?')">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>